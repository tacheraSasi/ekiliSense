# ekiliSense Environment Configuration
# Copy this file to .env and update with your settings

# Database Configuration
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_NAME=ekiliSense_db
DB_HOST=localhost
DB_PORT=3306

# Application Settings
APP_NAME=ekiliSense
APP_ENVIRONMENT=production
APP_DEBUG=false
APP_URL=https://sense.ekilie.com

# Security Settings
SESSION_LIFETIME=3600
CSRF_TOKEN_LIFETIME=7200
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Payment Gateway (Pesapal)
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_ENVIRONMENT=sandbox
# Options: sandbox, live

# Email Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@ekilie.com
MAIL_FROM_NAME=ekiliSense

# SMS Configuration (Optional - for 2FA)
SMS_PROVIDER=twilio
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=+1234567890

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://sense.ekilie.com/OAuth/google-callback.php

# Storage Configuration
STORAGE_DRIVER=local
# Options: local, s3, digitalocean

# AWS S3 (if using S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Cache Configuration
CACHE_DRIVER=file
# Options: file, redis, memcached

# Redis Configuration (if using Redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=sync
# Options: sync, database, redis

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
ENABLE_ANALYTICS=false

# Feature Flags
ENABLE_2FA=true
ENABLE_PARENT_PORTAL=false
ENABLE_API=false
ENABLE_DARK_MODE=true

# Subscription Settings
DEFAULT_TRIAL_DAYS=14
FREE_PLAN_STUDENT_LIMIT=50
FREE_PLAN_TEACHER_LIMIT=5
FREE_PLAN_CLASS_LIMIT=5

# File Upload Limits
MAX_UPLOAD_SIZE=10485760
# 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error
# Options: debug, info, notice, warning, error, critical, alert, emergency
